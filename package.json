  "files": [
    "build"
  ],
  "private": false,
  "main": "build/index.js",
  "scripts": {
    "postversion": "git push --tags && git push origin master",
    "version": "yarn run build && auto-changelog -p && git add CHANGELOG.md",
    "build": "webpack --mode production && cp build/temba-components* build/index.js",
    "start": "webpack-dev-server --mode development",
    "start:build": "http-server dist -o",
    "dev": "yarn run build && cp -R ./build/* ../rapidpro/node_modules/@nyaruka/temba-components/build/ && cp -R ./build/* ../floweditor/node_modules/@nyaruka/temba-components/build/"
  },
  "dependencies": {
    "autosize": "4.0.2",
    "axios": "0.18.1",
    "es6-dynamic-template": "2.0.0",
    "fa-icons": "^0.2.0",
    "flru": "1.0.2",
    "leaflet": "1.5.1",
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0",
    "marked": "0.7.0",
    "serialize-javascript": "^3.0.0",
    "textarea-caret": "3.1.0"
  },
  "devDependencies": {
    "@open-wc/building-webpack": "2.6.1",
    "@types/autosize": "3.0.6",
    "@types/leaflet": "1.4.4",
    "@types/textarea-caret": "3.0.0",
    "auto-changelog": "^1.16.2",
    "file-loader": "^5.1.0",
    "http-server": "0.12.1",
